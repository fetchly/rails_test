<%= turbo_frame_tag dom_id(lesson, 'project-submissions'), src: lesson_project_submissions_path(lesson, limit:)  do %>
  <div class="flex justify-center">
    <%= inline_svg_tag 'icons/spinner.svg', class: 'animate-spin h-12 w-12 text-gray-400 dark:text-gray-300', aria: true, title: 'dismiss', desc: 'dismiss icon' %>
  </div>
<% end %>

<% if lesson.project_submissions.any? %>
  <p class="text-center py-6 px-0">
    <span> Showing <%= limit %> most liked submissions -
    <%= link_to 'View full list of solutions', lesson_project_submissions_path(lesson), class: 'underline hover:no-underline text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-300', data: { test_id: 'view-all-projects-link' } %>
  </p>
<% end %>
